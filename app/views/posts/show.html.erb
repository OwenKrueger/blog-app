<p id="notice"><%= notice %></p>
<div class="container">
  <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= @post.title %></h5>
      <p class="card-text"><%= @post.body %></p>
    </div>
  </div>

  <%= link_to 'Edit Post', edit_post_path(@post) %> |
  <%= link_to 'Back To Index', posts_path %> |
  <%= link_to 'Create Comment', new_post_comment_path(@post) %>

  <div class="col-12">
    <% @comments.each do |comment| %>
	  <p>
	  	<%= comment.body %>
	    <% if current_user.id == comment.user_id or current_user.id = 1 %>
	  	  <%= link_to 'Edit Comment', edit_post_comment_path(@post, comment) %>
	  	  <p><%= link_to 'Delete Comment', post_comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p> 
	    <% end %>
	  </p>
  	 <% end %>
  </div>

  
</div>